{
  "name": "__MSG_appName__",
  "version": "0.1.3",
  "manifest_version": 2,
  "short_name": "YouTube Previewer",
  "author": {
    "name" : "Tennison Chan",
    "email" : "tennison.chan+gh@gmail.com",
    "url" : "http://.com/"
  },
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon.png",
    "128": "images/icon.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "background"
  ],
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com; object-src 'self'",
  "content_scripts": [{
    "css": [
      "styles/previewer.css"
    ],
    "matches": [
      "*://www.youtube.com/*"
    ],
    "js": [
      "bower_components/material-design-lite/material.min.js",
      "bower_components/jquery/dist/jquery.min.js",
      "scripts/profiles.youtube.js",
      "scripts/iframe_api.js",
      "scripts/videoTip.js",
      "scripts/tip.js",
      "scripts/previewer.js",
      "scripts/main.js",
      "scripts/options.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }],
  "web_accessible_resources": [
    "videoTip.html"
  ]
}
